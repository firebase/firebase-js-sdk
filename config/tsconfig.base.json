{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "lib": [
      "dom",
      "es2020",
      "esnext.WeakRef",
    ],
    "module": "ES2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2020",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "plugins": [
      {
        "name": "tsec",
        "reportTsecDiagnosticsOnly": true
      }
    ]
  }
}