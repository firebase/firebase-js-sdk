    "type": "git",
    "url": "https://github.com/firebase/firebase-js-sdk/tree/master/packages/app"
  },
  "bugs": {
    "url": "https://github.com/firebase/firebase-js-sdk/issues"
  },
  "typings": "dist/esm/index.d.ts",
