    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^2.3.7",
    "chai": "^4.1.1",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-replace": "^0.6.1",
    "gulp-sourcemaps": "^2.6.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
