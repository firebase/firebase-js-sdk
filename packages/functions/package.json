    "sinon": "7.3.2",
    "source-map-loader": "0.2.4",
    "ts-loader": "5.4.3",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "webpack": "4.30.0",
    "yargs": "13.2.2"
